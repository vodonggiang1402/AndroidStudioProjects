<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/symbol_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="Modules.SymbolScreen.SymbolDetail.SymbolDetail">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/symbol_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_color"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:gravity="center"
        android:navigationIcon="@drawable/ico_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:text="@string/symbol_detail_title"
            android:id="@+id/symbol_detail_toolbar_title"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/symbol_detail_title_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/background_color"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/symbol_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@android:color/black"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="@string/symbol_detail_title"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/symbol_detail_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="20dp"
                android:paddingBottom="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/black"
                android:background="@color/background_color"
                android:gravity="start"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_step_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/background_color"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/symbol_detail_title_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/black"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/watch_video_text"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >
                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/youtube_player_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:icon="@drawable/ico_play"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    app:iconSize="60dp"
                    app:iconGravity="textStart"
                    android:background="@color/white_50"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>