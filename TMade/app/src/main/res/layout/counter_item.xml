<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counter_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="@color/background_color">
    <LinearLayout
        android:id="@+id/counter_item_view_layout"
        android:background="@drawable/counter_custom_background"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/counter_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:textColor="@android:color/black"
            android:text="@string/main_counter_text"
            android:drawablePadding="10dp" />
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/img_counter_minus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/ico_minus"/>
            <TextView
                android:id="@+id/counter_item_text_view"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textSize="50sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:drawablePadding="10dp" />
            <ImageView
                android:id="@+id/img_counter_plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/ico_plus"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
